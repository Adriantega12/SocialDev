<article class="min-container">
  <img class="post-preview" src="{{API_HOST}}/{{path}}">
  <div class="summary">
    <a href="/posts/{{id}}"><h3>{{title}}</h3></a>
    <article>
      <p>{{excerpt}}</p>
    </article>
    <article>
      {{author}}
    </article>
    <section>
      {{date}}
    </section>
    <section>
      <p><i class="fas fa-star"></i> {{score}}</p>
    </section>
  </div>
</article>
