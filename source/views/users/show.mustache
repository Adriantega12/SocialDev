{{> ./partials/header}}
{{> ./partials/navbar}}

<section id="user-profile">
  <img class="avatar-xlg" src="{{API_HOST}}/{{profilePic}}">
  <h1 class="main-title">
    {{#firstName}}
      {{firstName}}
    {{/firstName}}
    {{^firstName}}
      Mr.
    {{/firstName}}
    {{#lastName}}
      {{lastName}}
    {{/lastName}}
    {{^lastName}}
      Unkwown
    {{/lastName}}
  </h1>
  <section id="user-summary">
    <div class="summary-section">
      <h2>Posts:</h2>
      <p>{{posts.length}}</p>
    </div>
    <div class="summary-section">
      <h2>Comments:</h2>
      <p>{{comments.length}}</p>
    </div>
    <div class="summary-section">
      <h2>Level:</h2>
      <p>{{#level}}{{/level}}{{^level}}0{{/level}}</p>
    </div>
    <div class="summary-section">
      <h2>Avg. score:</h2>
      <p>0</p>
    </div>
  </section>
</section>

<main class="main-container">
  <section>
    <h2>Posts</h2>
    <ol class="list">
      {{#posts}}
        <li>
          {{> ./partials/post-list-li}}
        </li>
      {{/posts}}
    </ol>
  </section>
</main>

{{> ./partials/footer}}
